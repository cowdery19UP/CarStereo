<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs371.carstereo.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="73dp">

    <LinearLayout
        android:layout_width="1267dp"
        android:layout_height="342dp"
        android:background="#FFFF00"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="646dp"
            android:layout_height="358dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.60">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="208dp"
                    android:layout_height="79dp"
                    android:autoText="true"
                    android:background="#336750"
                    android:elevation="1dp"
                    android:shadowColor="#449090"
                    android:text="AM/FM"
                    android:textOff="AM"
                    android:textOn="FM"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="430dp"
                    android:layout_height="match_parent"
                    android:text="@string/Station"
                    android:textColor="#011231"
                    android:textSize="60dp"
                    tools:layout_editor_absoluteX="258dp"
                    tools:layout_editor_absoluteY="65dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:max="100"
                android:progress="3"
                android:scrollbarSize="@android:dimen/thumbnail_width"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="113dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_weight="0.47"
                android:orientation="vertical"
                android:weightSum="1">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.90"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/preSet1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pre-Set 1"
                        android:textSize="50sp" />

                    <RadioButton
                        android:id="@+id/preSet2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pre-Set 2"
                        android:textSize="50sp" />

                    <RadioButton
                        android:id="@+id/preSet3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pre-Set 3"
                        android:textSize="50sp" />

                    <RadioButton
                        android:id="@+id/preSet3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pre-Set 4"
                        android:textSize="50sp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="1281dp"
        android:layout_height="404dp"
        android:background="#AFFA98"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="361dp">

        <LinearLayout
            android:layout_width="1008dp"
            android:layout_height="255dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="242dp"
                android:layout_height="242dp"
                android:layout_weight="0.98"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="98dp"
                    android:layout_height="106dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColorLink="?attr/actionModeSplitBackground" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.11">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:text="CD Deck :)"
                        android:textSize="30sp"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="141dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/PausePlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pause/Play" />

                        <Button
                            android:id="@+id/Stop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Stop" />

                        <Button
                            android:id="@+id/Eject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Eject" />

                        <Button
                            android:id="@+id/Next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Next" />

                        <Button
                            android:id="@+id/Repeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Repeat" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <SeekBar
                        android:id="@+id/seekBar2"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.01"
                        android:max="100"
                        android:progress="2" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:text="Volume"
                        android:textSize="80dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
